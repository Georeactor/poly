.book
  width 100%
  max-width 600px
  min-width 450px
  margin-bottom 115px
  box-shadow 0 2px 2px rgba(0,0,0,0.2)
  display table
  margin 20px auto 0

  *
    font-weight 100

  fieldset
    border none

  .info, .cardinality, img.banner
    display inline-block
    width 100%
    float left

  .info, img.banner
    background #fff

  .bannerWrapper
    height 400px
    overflow hidden
    width 100%
    position relative
    background-size cover
    background-position center

  .progressBar
    height 4px
    width 100%
    background #eee
    float left

    .bar
      height 100%
      min-width 3px
      float left
      background $buttonBlue

  .info
    z-index 1
    position relative
    padding 0 20px
    max-width 600px

    .wrapper
      width 100%
      margin auto
      position relative
      display table

      .menu
        top 20px
        right -20px

      section
        button
          border none
          padding 8px
          margin 7px
          position relative
          cursor pointer
          background transparent
          border-radius 100%
          outline none

          &:hover
            .buttonBackground
              height 45px
              width 45px
              margin -4px -4.6px

          &:active
            padding 9px 8px 7px

            img.star
              float left

          &.favorite
            float left

          &.deleteBook
            float right

          span.buttonBackground
            height 0px
            width 0px
            display block
            display none
            position absolute
            z-index 0
            background #f7f7f7
            margin 29.5px
            border-radius 100%
            box-shadow inset 0 1px 1px rgba(0,0,0,0.1)
            transition all $time ease-in-out

      h1
        float left
        width 100%
        max-width 550px
        white-space normal
        overflow hidden
        font-size 1.7em

      h3
        line-height 2.4em
        margin-bottom 0
        float right

      .description,
      .author
        float left

      .description
        width 100%
        min-height 60px
        margin 0 0 1.5em 0
        padding 2px 2px 4px

        button
          background none
          border none
          color $buttonBlue
          cursor pointer


      a.author, p.author
        clear both
        padding 8px 11px
        margin -8px -11px 1em
        font-size 12px
        text-decoration none
        border-radius $radius
  
      p.author
        color #aaa

      a.author
        color $buttonBlue
  .inputMethod
    width 100%
    float left
    background #fafcfc
    box-shadow 0 -1px 2px rgba(0,0,0,0.1)

    label
      float left
      background transparent
      border none
      color $buttonBlue
      font-weight 500
      font-size 1em
      padding 1em

      input
        display block
        float left
        margin 6px 6px 0 0

    .inputOptions
      float right
      
      button
        float left
        margin 12px 6px
        width 40px
        height 40px
        border-radius 100%
        outline none
        background-color transparent
        &:nth-child(2)
          transition opacity 0.2s ease-in

        &:hover
          background-color #f5f5f5

        &.selectedInput
          box-shadow inset 0 1px 0 #336fb0, inset 0 2px 4px rgba(34,84,137,0.5)
          border-top 1px solid #68abfd !important
          background #6cadfd
  .iframe-description
    width 100%
    height 300px
        
iframe[src^="https://apis.google.com"]
  display: none;
         
